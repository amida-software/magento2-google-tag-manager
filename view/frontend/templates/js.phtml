<script>
    (function () {
        if (window.__gtmHookInstalled) return;
        window.__gtmHookInstalled = true;

        var DL_NAME   = <?= json_encode($dataLayerName) ?>;
        var LOGIN_KEY = '__gtmLoginPending';
        var OTP_KEY   = '__gtmOtpFlow';

        window[DL_NAME] = window[DL_NAME] || [];
        function push(v){ window[DL_NAME].push(v); }

        function ssGet(k){ try{ return sessionStorage.getItem(k); }catch(_){ return null; } }
        function ssSet(k,v){ try{ sessionStorage.setItem(k,v); }catch(_){ } }
        function ssDel(k){ try{ sessionStorage.removeItem(k); }catch(_){ } }

        function isOtpAny(u){   u=String(u||''); return /\/otplogin\/account\/(?:sendotp|otplogin)(?:\/|\?|$)/i.test(u); }
        function isOtpLogin(u){ u=String(u||''); return /\/otplogin\/account\/otplogin(?:\/|\?|$)/i.test(u); }
        function isLoginPost(u){u=String(u||''); return /\/customer\/account\/loginPost(?:\/|\?|$)/i.test(u); }

        function markOtpOn(){ ssSet(OTP_KEY,'1'); }
        function clearOtp(){ ssDel(OTP_KEY); }
        function isOtpFlow(){ return ssGet(OTP_KEY)==='1'; }

        var __loginSent = false;
        function pushLogin(method){
            if (__loginSent) return;
            __loginSent = true;
            push({ecommerce:null});
            push({event:'login', ecommerce:{method: method}});
        }

        if (window.fetch){
            var _fetch = window.fetch;
            window.fetch = function(input, init){
                var url = (typeof input === 'string') ? input : (input && input.url) || '';

                if (isOtpAny(url))   markOtpOn();              // начался OTP-флоу
                if (isLoginPost(url)) ssSet(LOGIN_KEY,'Google'); // обычный логин → после редиректа пушнем Google

                return _fetch(input, init).then(function(resp){
                    if (isOtpLogin(url)){
                        var ok = resp && resp.ok;
                        try {
                            resp.clone().text().finally(function(){
                                if (ok){                              // успех OTP-логина → пушим Phone и чистим флаги
                                    pushLogin('Phone');
                                    ssDel(LOGIN_KEY);
                                    clearOtp();
                                }
                            });
                        } catch(_){}
                    }
                    return resp;
                });
            };
        }

        if (window.XMLHttpRequest){
            var XO = XMLHttpRequest.prototype.open;
            var XS = XMLHttpRequest.prototype.send;

            XMLHttpRequest.prototype.open = function(method, url){
                this.__gtmUrl = url || '';
                if (isOtpAny(this.__gtmUrl))   markOtpOn();
                if (isLoginPost(this.__gtmUrl)) ssSet(LOGIN_KEY,'Google');
                return XO.apply(this, arguments);
            };

            XMLHttpRequest.prototype.send = function(){
                this.addEventListener('load', () => {
                    if (isOtpLogin(this.__gtmUrl) && this.status >= 200 && this.status < 300){
                        pushLogin('Phone');
                        ssDel(LOGIN_KEY);
                        clearOtp();
                    }
                });
                return XS.apply(this, arguments);
            };
        }

        document.addEventListener('DOMContentLoaded', function(){
            var pending = ssGet(LOGIN_KEY);
            if (pending && !isOtpFlow()){
                pushLogin(pending);
                ssDel(LOGIN_KEY);
            }
        });
    })();
</script>
