<script>
    (function () {
        if (window.__gtmHookInstalled) return;
        window.__gtmHookInstalled = true;

        const dataLayerName = <?= json_encode($dataLayerName) ?>;
        const cartEventEndpoint = <?= json_encode($block->getUrl('gtm/cart/event')) ?>;

        function dl() {
            window[dataLayerName] = window[dataLayerName] || [];
            return window[dataLayerName];
        }

        function isCart(url) {
            url = String(url || '');
            return /\/checkout\/(?:cart\/(?:add|delete|update|updateItemQty|remove)|sidebar\/(?:updateItemQty|removeItem))/.test(url);
        }

        function isOtp(url) {
            url = String(url || '');
            return /\/otplogin\/account\/sendotpcreate/i.test(url);
        }

        function pingCart(originalRequestUrl) {
            const url = cartEventEndpoint + '?src=' + encodeURIComponent(originalRequestUrl || '');
            fetch(url, { credentials: 'same-origin' })
                .then(r => r.json())
                .then(payload => {
                    if (!payload || !payload.event) return;
                    const layer = dl();
                    layer.push({ ecommerce: null });
                    layer.push(payload);
                })
                .catch(() => {});
        }

        function handleOtpResponse(respText, ok) {
            if (!ok) return;
            try {
                const j = JSON.parse(respText || '{}');
                if (j && (j.success === false || j.error)) return;
            } catch (e) {}
            const layer = dl();
            layer.push({ ecommerce: null });
            layer.push({
                event: 'generate_lead',
                ecommerce: {
                    currency: 'UAH',
                    value: 0
                }
            });
        }

        if (window.fetch) {
            const originalFetch = window.fetch;
            window.fetch = function (input, init) {
                const url = (typeof input === 'string') ? input : (input && input.url) || '';
                const cartCall = isCart(url);
                const otpCall  = isOtp(url);

                return originalFetch(input, init).then(response => {
                    if (cartCall) {
                        try { response.clone().text().finally(() => pingCart(url)); }
                        catch (e) { pingCart(url); }
                    }
                    if (otpCall) {
                        try {
                            response.clone().text()
                                .then(t => handleOtpResponse(t, response.ok))
                                .catch(() => handleOtpResponse('', response.ok));
                        } catch (e) {
                            handleOtpResponse('', response.ok);
                        }
                    }
                    return response;
                });
            };
        }

        if (window.XMLHttpRequest) {
            const originalOpen = XMLHttpRequest.prototype.open;
            const originalSend = XMLHttpRequest.prototype.send;

            XMLHttpRequest.prototype.open = function (method, url) {
                this.__isCart = isCart(url || '');
                this.__isOtp  = isOtp(url || '');
                this.__url    = url || '';
                return originalOpen.apply(this, arguments);
            };

            XMLHttpRequest.prototype.send = function () {
                this.addEventListener('load', () => {
                    if (this.__isCart) pingCart(this.__url);
                    if (this.__isOtp)  handleOtpResponse(String(this.responseText || ''), this.status >= 200 && this.status < 300);
                });
                return originalSend.apply(this, arguments);
            };
        }

        if (!window.__gtmCartPingDone) {
            window.__gtmCartPingDone = true;
            document.addEventListener('DOMContentLoaded', () => {
                pingCart(location.pathname + location.search);
            });
        }
    })();
</script>

