<script>
    (function () {
        if (window.__gtmHookInstalled) return;
        window.__gtmHookInstalled = true;

        const dataLayerName = <?= json_encode($dataLayerName) ?>;
        const cartEventEndpoint = <?= json_encode($block->getUrl('gtm/cart/event')) ?>;

        function dl() {
            window[dataLayerName] = window[dataLayerName] || [];
            return window[dataLayerName];
        }

        function isCart(u) {
            u = String(u || '');
            return /\/checkout\/(?:cart\/(?:add|delete|update|updateItemQty|remove)|sidebar\/(?:updateItemQty|removeItem))/.test(u);
        }

        function isOtp(u) {
            u = String(u || '');
            return /\/otplogin\/account\/sendotpcreate(?:\/)?(?:\?|$)/i.test(u);
        }

        function isCreateAccount(u) {
            u = String(u || '');
            return /\/customer\/account\/(?:createpost|create)(?:\/)?(?:\?|$)/i.test(u);
        }

        function isAccountDashboardPath(pathname) {
            const p = String(pathname || '');
            return /\/customer\/account\/?(?:\?.*)?$/.test(p) && !/\/customer\/account\/create(?:\/|$)/.test(p);
        }

        function pingCart(originalRequestUrl) {
            const url = cartEventEndpoint + '?src=' + encodeURIComponent(originalRequestUrl || '');
            fetch(url, { credentials: 'same-origin' })
                .then(r => r.json())
                .then(payload => {
                    if (!payload || !payload.event) return;
                    const layer = dl();
                    layer.push({ ecommerce: null });
                    layer.push(payload);
                })
                .catch(() => {});
        }

        function handleOtpResponse(respText, ok) {
            if (!ok) return;
            try {
                const j = JSON.parse(respText || '{}');
                if (j && (j.success === false || j.error)) return;
            } catch (_) {}
            const layer = dl();
            layer.push({ ecommerce: null });
            layer.push({
                event: 'generate_lead',
                ecommerce: { currency: 'UAH', value: 0 }
            });
        }

        function handleCreateResponse(finalUrl) {
            try {
                const u = new URL(finalUrl, location.origin);
                if (isAccountDashboardPath(u.pathname)) {
                    const layer = dl();
                    layer.push({ ecommerce: null });
                    layer.push({
                        event: 'generate_lead',
                        ecommerce: { currency: 'UAH', value: 0 }
                    });
                }
            } catch (_) {}
        }

        if (window.fetch) {
            const origFetch = window.fetch;
            window.fetch = function (input, init) {
                const url = (typeof input === 'string') ? input : (input && input.url) || '';
                const cartCall   = isCart(url);
                const otpCall    = isOtp(url);
                const createCall = isCreateAccount(url);

                return origFetch(input, init).then(res => {
                    if (cartCall) {
                        try { res.clone().text().finally(() => pingCart(url)); }
                        catch (_) { pingCart(url); }
                    }
                    if (otpCall) {
                        try {
                            res.clone().text()
                                .then(t => handleOtpResponse(t, res.ok))
                                .catch(() => handleOtpResponse('', res.ok));
                        } catch (_) {
                            handleOtpResponse('', res.ok);
                        }
                    }
                    if (createCall) {
                        const finalUrl = res.redirected ? res.url : url;
                        handleCreateResponse(finalUrl);
                    }
                    return res;
                });
            };
        }

        if (window.XMLHttpRequest) {
            const origOpen = XMLHttpRequest.prototype.open;
            const origSend = XMLHttpRequest.prototype.send;

            XMLHttpRequest.prototype.open = function (method, url) {
                this.__isCart   = isCart(url || '');
                this.__isOtp    = isOtp(url || '');
                this.__isCreate = isCreateAccount(url || '');
                this.__origUrl  = url || '';
                return origOpen.apply(this, arguments);
            };

            XMLHttpRequest.prototype.send = function () {
                this.addEventListener('load', () => {
                    if (this.__isCart)   pingCart(this.__origUrl);
                    if (this.__isOtp)    handleOtpResponse(String(this.responseText || ''), this.status >= 200 && this.status < 300);
                    if (this.__isCreate) handleCreateResponse(this.responseURL || this.__origUrl);
                });
                return origSend.apply(this, arguments);
            };
        }

        if (!window.__gtmCartPingDone) {
            window.__gtmCartPingDone = true;
            document.addEventListener('DOMContentLoaded', () => {
                pingCart(location.pathname + location.search);
            });
        }
    })();
</script>

