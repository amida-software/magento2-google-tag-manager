<script>
    (function () {
        if (window.__gtmHookInstalled) return;
        window.__gtmHookInstalled = true;

        const dataLayerName = <?= json_encode($dataLayerName) ?>;
        const cartEventEndpoint = <?= json_encode($block->getUrl('gtm/cart/event')) ?>;
        const LOGIN_FLAG = '__gtmLoginPending';

        function dl(){ window[dataLayerName] = window[dataLayerName] || []; return window[dataLayerName]; }

        function isCart(url){
            url = String(url || '');
            return /\/checkout\/(?:cart\/(?:add|delete|update|updateItemQty|remove)|sidebar\/(?:updateItemQty|removeItem))/.test(url);
        }
        function isLoginPost(url){
            url = String(url || '');
            return /\/customer\/account\/loginPost(?:\/(?:referer\/[^?]+)?)?(?:[?#]|$)/i.test(url);
        }
        function isOtpLogin(url){
            url = String(url || '');
            return /\/otplogin\/account\/otplogin(?:[?#]|$)/i.test(url);
        }
        function isOtpSend(url){
            url = String(url || '');
            return /\/otplogin\/account\/sendotp(?:[?#]|$)/i.test(url);
        }
        function isSuccessStatus(s){ s = +s; return s >= 200 && s < 400; }

        function setLoginFlag(method){
            try {
                const cur = sessionStorage.getItem(LOGIN_FLAG);
                if (cur === 'Phone' && method === 'Google') return;
                sessionStorage.setItem(LOGIN_FLAG, method);
            } catch(e){}
        }
        function pullLoginFlag(){
            try {
                const v = sessionStorage.getItem(LOGIN_FLAG);
                sessionStorage.removeItem(LOGIN_FLAG);
                return v;
            } catch(e){ return null; }
        }
        function pushLogin(method){
            const layer = dl();
            layer.push({ ecommerce: null });
            layer.push({ event: 'login', ecommerce: { method: method || 'Google' } });
        }

        function pingCart(originalRequestUrl){
            const url = cartEventEndpoint + '?src=' + encodeURIComponent(originalRequestUrl || '');
            fetch(url, { credentials: 'same-origin' })
                .then(r => r.json())
                .then(payload => {
                    if (!payload || !payload.event) return;
                    const layer = dl();
                    layer.push({ ecommerce: null });
                    layer.push(payload);
                })
                .catch(() => {});
        }

        if (window.fetch){
            const origFetch = window.fetch;
            window.fetch = function(input, init){
                const url = (typeof input === 'string') ? input : (input && input.url) || '';
                const cartCall  = isCart(url);
                const loginCall = isLoginPost(url);
                const otpLogin  = isOtpLogin(url);
                const otpSend   = isOtpSend(url);

                return origFetch(input, init).then(resp => {
                    const ok = isSuccessStatus(resp && resp.status);

                    if (cartCall){
                        try { resp.clone().text().finally(() => pingCart(url)); }
                        catch (e) { pingCart(url); }
                    }
                    if (loginCall && ok) setLoginFlag('Google');
                    if ((otpLogin || otpSend) && ok) setLoginFlag('Phone');

                    return resp;
                });
            };
        }

        if (window.XMLHttpRequest){
            const origOpen = XMLHttpRequest.prototype.open;
            const origSend = XMLHttpRequest.prototype.send;

            XMLHttpRequest.prototype.open = function(method, url){
                this.__isCart     = isCart(url || '');
                this.__isLogin    = isLoginPost(url || '');
                this.__isOtpLogin = isOtpLogin(url || '');
                this.__isOtpSend  = isOtpSend(url || '');
                this.__url        = url || '';
                return origOpen.apply(this, arguments);
            };

            XMLHttpRequest.prototype.send = function(){
                this.addEventListener('load', () => {
                    const ok = isSuccessStatus(this.status);
                    if (this.__isCart) pingCart(this.__url);
                    if (this.__isLogin && ok) setLoginFlag('Google');
                    if ((this.__isOtpLogin || this.__isOtpSend) && ok) setLoginFlag('Phone');
                });
                return origSend.apply(this, arguments);
            };
        }

        if (!window.__gtmCartPingDone){
            window.__gtmCartPingDone = true;
            document.addEventListener('DOMContentLoaded', () => {
                pingCart(location.pathname + location.search);
                const pending = pullLoginFlag();
                if (pending) pushLogin(pending);
            });
        }
    })();
</script>



